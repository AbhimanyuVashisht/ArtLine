

<div class="row" style="margin: 75px">
    <div class="col s12 xs12 l6 product-thumbnail-slider-wrapper __content-left">
        <div class="product-thumbnail-slider">
            <div class="product-syn-slider-1-wrapper">
                <div class="product-syn-slider-1 syn-slider-1 direction-nav">
                    <div class="block-product-slider">
                        <iframe id="player" type="text/html" width="340" height="320"
                                src="http://www.youtube.com/embed/<%= product.product_path%>?enablejsapi=1&origin=http://localhost:8000"
                                frameborder="0"></iframe>
                        <script>
                            // 2. This code loads the IFrame Player API code asynchronously.
                            let tag = document.createElement('script');

                            tag.src = "https://www.youtube.com/iframe_api";
                            let firstScriptTag = document.getElementsByTagName('script')[0];
                            firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

                            // 3. This function creates an <iframe> (and YouTube player)
                            //    after the API code downloads.
                            let player;
                            function onYouTubeIframeAPIReady() {
                                player = new YT.Player('player', {
                                    events: {
                                        'onReady': onPlayerReady,
                                        'onStateChange': onPlayerStateChange
                                    }
                                });
                            }

                            // 4. The API will call this function when the video player is ready.
                            function onPlayerReady(event) {
                                event.target.playVideo();
                            }

                            // 5. The API calls this function when the player's state changes.
                            //    The function indicates that when playing a video (state=1),
                            //    the player should play for six seconds and then stop.
                            let done = false;
                            function onPlayerStateChange(event) {
                                if (event.data == YT.PlayerState.PLAYING && !done) {
                                    setTimeout(stopVideo, 6000);
                                    done = true;
                                }
                            }
                            function stopVideo() {
                                player.stopVideo();
                            }
                        </script>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col s12 xs12 l6 __content-right">
        <div class="product-detail">
            <h3 class="fz-3-l"><a><%= product.product_name%></a></h3>
            <div class="__price fz-4 font-heading">
                <!--<span class="color-primary">$<%= product.price %></span>-->
            </div>
            <div class="__text">
                <p><%= product.description%></p>
            </div>
            <form>
                <div class="__option-2 clearfix">
                    <div class="__button"><a href="/user/<%= product.member_id%>" class="btn btn-primary">View Profile</a></div>
                </div>
            </form>
            <br>
            <div class="__others">
                <p>VIEWS:&nbsp;<a><%= product.views%></a></p>
                <p>ARTIST:&nbsp;<a href="/user/<%= product.member_id%>"><%= product.username %></a></p>
            </div>

            <ul class="social circle secondary responsive">
                <li><a href="#"><i class="icon icon-facebook-1"></i></a></li>
                <li><a href="#"><i class="icon icon-twitter-1"></i></a></li>
            </ul>
        </div>
    </div>
</div>