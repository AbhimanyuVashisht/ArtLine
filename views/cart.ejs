  <header class="bound">
  <div class="container" class="bound">
     <h2 class="font-head" style="opacity: 1; text-align: center;">SHOPPING CART</h2>
  </div>
  </header>
  <section class="tabpadd">
  	<form>
       <div class="container" >
              <div class="row" style="margin-bottom: 10%;">
                <div class="col s12 m12">
                  <div class="shop-cart-list">
                    <table class="highlight bordered">
                      <thead style="background-color:#e0e0e0;">
                        <tr>
                          <th class="product-img">PRODUCT</th>
                          <th class="product-name">NAME</th>
                          <th class="product-price">PRICE</th>
                          <th class="product-total">TOTAL</th>
                          <th class="product-remove">&nbsp;</th>
                        </tr>
                      </thead>
                      <tbody id="cartbody">
                      <% let total = 0;%>
                        <% for( let i of cart){%>
                            <% let finalPrice = i.dataValues.price * (100 - global.discount)/100%>
                            <% total = total + finalPrice %>
                            <tr class="cart-item">
                                <td class="product-img"><a href="#">
                                        <div class="image overlay-container">
                                            <div class=" overlay-hover bgc-dark-o-4"></div><img src="./data/products/<%= i.dataValues.product_path%>" height="75px"  alt="Cart Item"/>
                                        </div></a>
                                </td>
                                <td class="product-name"><a href="#"><%= i.dataValues.product_name%></a></td>
                                <td class="product-price">$<%= i.dataValues.price%></td>
                                <td class="product-total"><%= finalPrice%></td>
                                <!--<td class="product-total">$200.00</td>-->
                                <td class="product-remove"><a onclick="deleteCartEle(<%= i.dataValues.prod_id%>)">&#9587;</a></td>
                            </tr>
                        <%}%>

                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              <div class="row">
                    <div class="col l4 m6 xs12 pt-55 last-padd">
                      <div class="shop-cart-shipping">
                        <h4 class="title"><b>Shipping Address</b></h4>
                        <div class="input-field col s12">
                          <select>
                            <option value="" disabled selected>Choose Your Country</option>
                            <option value="1">Australia</option>
                            <option value="2">Canada</option>
                            <option value="3">Italy</option>
                            <option value="4">Poland</option>
                            <option value="5">Singapore</option>
                            <option value="6">United Kingdom</option>
                            <option value="7" selected>United States</option>
                          </select>
                          <label>Country</label>
                        </div>
                        <input type="text" name="address" placeholder="Address" class="mb-20">
                        <input type="text" name="postcode" placeholder="Postcode / Zip">
                      </div>
                    </div>
                    <div class="col l5 offset-l3 xs12 m6 pt-55 last-padd">
                            <div class="shop-cart-total">
                                <h4 class="__title">CART TOTAL</h4>
                                <hr/>
                                <div class="__sub-total">
                                  <h6>SUBTOTAL</h6>$<span class="price"><%= total%></span>
                                </div>
                                <div class="__shipping">
                                  <h6>SHIPPING AND HANDLING</h6><span>Free Shipping</span>
                                </div>
                                <div class="__order-total">
                                  <h6>ORDER TOTAL</h6>$<span><%= total%></span>
                                </div>
                                <hr class="no-margin"/>
                                <div class="__total">
                                  <h4>TOTAL</h4><span class="price">$<%= total%></span>
                                   <span id="paym"><a href="cart/billing"  class="btn btn-primary no-border">Payment</a></span>
                                </div>
                            </div>
                    </div>
              </div>
       </div>
    </form>
  </section>
  <footer class="page-footer grey darken-4">
